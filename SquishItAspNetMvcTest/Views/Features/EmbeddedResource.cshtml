@using SquishIt.Framework
@{
    ViewBag.Title = "Embed Resource";
}
<h2>@ViewBag.Title</h2>
<div id="test-container">
    <p class="red-text-embedded-less">This will be red if embedded .LESS was processed</p>
</div>
<p>
    You should see a tag for embedded.js?r=8C2CBB762AB0BA360A38556513FAFEBE below:
</p>
<textarea style="width: 100%">
    @MvcHtmlString.Create(Bundle.JavaScript()
                                                         .AddEmbeddedResource("~/output/test.js", "SquishItAspNetMvcTest://EmbeddedResource.Embedded.js")
                                                         .ForceRelease()
                                                         .Render("/output/embedded.js"))
</textarea>
<p>
    You should see a tag for embedded.css?r=67F81278D746D60E6F711B5A29747388 below:
</p>
<textarea style="width: 100%">
    @MvcHtmlString.Create(Bundle.Css()
        .AddEmbeddedResource("~/output/test.css", "SquishItAspNetMvcTest://EmbeddedResource.Embedded.css")
        .ForceRelease()
        .Render("/output/embedded.css"))
</textarea>
@Html.Raw(Bundle.Css()
    .AddEmbeddedResource("~/output/test.less.css", "SquishItAspNetMvcTest://EmbeddedResource.Embedded.less.css")
    .Render("/output/embeddedless.css"))
